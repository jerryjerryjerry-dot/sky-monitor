{
    "name": "sky-monitor",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "packageManager": "pnpm@9.11.0",
    "scripts": {
        "build:watch": "turbo build:watch",
        "build": "turbo build",
        "clean": "run-s clean:build clean:caches",
        "clean:build": "pnpm --filter @sky-monitor/* clean",
        "clean:caches": " rimraf .turbo/cache **/*/.turbo",
        "clean:deps": "rimraf node_modules **/*/node_modules",
        "clean:all": "run-s clean:build clean:caches clean:deps",
        "dev:server:dsn": "pnpm --filter @sky-monitor/monitor-dsn-server start:dev",
        "dev:server:monitor": "pnpm --filter @sky-monitor/monitor-server start:dev",
        "dev:client:monitor": "pnpm --filter @sky-monitor/monitor-client dev",
        "docker:start": "docker compose -f .devcontainer/docker-compose.yml up -d",
        "docker:stop": "docker compose -f .devcontainer/docker-compose.yml down",
        "docker:deploy": "docker compose -f .devcontainer/docker-compose.deploy.yml up -d",
        "docker:build-deploy": "pnpm build && pnpm docker:deploy",
        "docker:deploy:stop": "docker compose -f .devcontainer/docker-compose.deploy.yml down",
        "lint": "eslint",
        "lint:style": "stylelint",
        "lint:staged": "lint-staged",
        "commit": "git-cz",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{css,less}": [
            "prettier --cache --write"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --cache --parser=typescript --write"
        ]
    },
    "devDependencies": {
        "@types/node": "22.7.5",
        "@eslint/js": "9.12.0",
        "globals": "15.10.0",
        "typescript": "5.5.3",
        "typescript-eslint": "8.8.1",
        "eslint-plugin-react-refresh": "0.4.12",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "lint-staged": "15.2.10",
        "prettier": "3.3.3",
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "commitizen": "4.3.1",
        "fast-glob": "3.3.2",
        "husky": "9.1.6",
        "cz-git": "1.10.1",
        "tsup": "8.3.0",
        "turbo": "2.1.3",
        "rimraf": "6.0.1",
        "npm-run-all2": "6.2.3"
    }
}
