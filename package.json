{
    "name": "sky-monitor",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build:watch": "turbo build:watch",
        "build": "turbo build",
        "dev:dsn": "pnpm --filter @sky-monitor/dsn-server start:dev",
        "dev:api": "pnpm --filter @sky-monitor/api-server start:dev",
        "dev:web": "pnpm --filter @sky-monitor/web-dashboard dev",
        "docker:dev": "docker compose -f .devcontainer/docker-compose.dev.yml up -d",
        "docker:dev:stop": "docker compose -f .devcontainer/docker-compose.dev.yml down",
        "docker:dev:logs": "docker compose -f .devcontainer/docker-compose.dev.yml logs -f",
        "docker:prod": "docker compose -f .devcontainer/docker-compose.prod.yml up -d --build",
        "docker:prod:stop": "docker compose -f .devcontainer/docker-compose.prod.yml down",
        "docker:start": "docker compose -f .devcontainer/docker-compose.yml up -d",
        "docker:stop": "docker compose -f .devcontainer/docker-compose.yml down",
        "docker:logs": "docker compose -f .devcontainer/docker-compose.yml logs -f",
        "dev:all": "npm-run-all --parallel dev:api dev:dsn dev:web",
        "dev": "pnpm docker:dev && pnpm dev:all",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "commit": "git-cz",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Jerry",
    "license": "ISC",
    "packageManager": "pnpm@10.15.0",
    "devDependencies": {
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "@eslint/js": "9.12.0",
        "@types/node": "22.7.5",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "@typescript-eslint/utils": "^8.44.1",
        "commitizen": "4.3.1",
        "cspell": "8.14.4",
        "cz-git": "1.10.1",
        "eslint": "^9.36.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "0.4.12",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "fast-glob": "3.3.2",
        "flag": "^5.0.1",
        "globals": "15.10.0",
        "husky": "9.1.6",
        "lint-staged": "15.2.10",
        "npm-run-all2": "6.2.3",
        "prettier": "3.3.3",
        "rimraf": "6.0.1",
        "tsup": "8.3.0",
        "turbo": "2.1.3",
        "typescript": "5.5.3",
        "typescript-eslint": "8.8.1"
    }
